<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_permission_request_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="権限をください"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_permission_request_desciption_text_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/activity_permission_request_desciption_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="モバイルデータ使用量の取得に権限が必要ですので許可してください。"
        app:layout_constraintBottom_toTopOf="@+id/activity_permission_request_permission_button"
        app:layout_constraintEnd_toEndOf="@+id/activity_permission_request_title_text_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/activity_permission_request_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/activity_permission_request_title_text_view" />

    <Button
        android:id="@+id/activity_permission_request_permission_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="権限を取得"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_permission_request_desciption_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>