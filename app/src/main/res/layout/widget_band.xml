<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/widget_band_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/widget_background"
        android:gravity="center"
        android:textColor="@color/dark"
        android:textSize="18sp"
        tools:text="Band null" />

    <ImageButton
        android:id="@+id/widget_band_update_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/widget_rounded_button_background"
        android:clickable="true"
        android:contentDescription="update"
        android:drawableTint="#ffffff"
        android:elevation="0dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:src="@drawable/ic_baseline_signal_cellular_alt_24"
        android:translationZ="0dp" />

    <Button
        android:id="@+id/widget_band_carrier_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="0dp"
        android:background="@drawable/widget_rounded_button_background"
        android:drawableStart="@drawable/ic_baseline_4g_mobiledata_24"
        android:drawableTint="#ffffff"
        android:elevation="0dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:translationZ="0dp"
        tools:text="Carrier name" />

</FrameLayout>